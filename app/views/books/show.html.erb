<div class="container">
  <div class="row">

  <p class="notice"><%= notice %></p>

  <%= render "users/link", book: @book2, user: @book.user %>


  <div class="col-md-9">
    <h2>Book detail</h2>
    <table class="table table-hover">
      <tbody>
        <tr>
          <% if @book.user.id == current_user.id %>

          <td class="col-md-1"> <%= attachment_image_tag @book.user, :profile_image, fallback: "no_image.jpg",size: "40x40" %> </td>
          <td class="col-md-2"> <%= @book.title %> </td>
          <td class="col-md-3"> <%= @book.body %></td>
          <td class="col-md-2"> <%= link_to "Edit", edit_book_path, class: "btn btn-success edit_book_#{@book.id}" %>
          </td>
          <td class="col-md-2"> <%= link_to "Destroy", book_path(@book.id), class: "btn btn-danger destroy_book_#{@book.id}", method: :delete, "data-confirm" => "本当に消しますか?" %> </td>

          <% else %>
            <td class="col-md-2"> <%= attachment_image_tag @book.user, :profile_image, fallback: "no_image.jpg",size: "40x40" %> </td>
            <td class="col-md-3"> <%= @book.title %> </td>
            <td class="col-md-4"> <%= @book.body %></td>
          <% end %>

        </tr>
      </tbody>
    </table>
  </div>

  <p class="right">CopyRight Infratop.inc</p>

  </div>
</div>

