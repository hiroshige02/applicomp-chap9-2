<div class="container">
  <div class="row">
  <div class="clearfix">
  <div class="col-md-5">

    <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "name" %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, class: "email", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, class: "password", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, class: "password_confirm", autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", :class=>"btn btn-success top" %>
        </div>

      <% end %>

      <%= render "devise/shared/links" %>

  </div>
  </div>

  <div class="col-md-6">
    <p class="right">CopyRight Infratop.inc</p>
  </div>

  </div> <!--row-->
</div>
