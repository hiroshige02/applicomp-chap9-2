<div class="container">
<div class="row">

<div class="clearfix">
<div class="col-md-5">

<% if @user.errors.any? %>
  <p class="error"><%= @user.errors.count %>件のエラーが発生しました</p>
    <% @user.errors.full_messages.each do |message| %>
     <p class="error"><%= message %></p>
    <% end %>
  <% end %>

<h2>User Info</h2>

<%= form_for(@user) do |f| %>
  <p><strong>Name</strong></p>
  <%=f.text_field :name, placeholder:"名前", class: "name" %>
  <p><strong>Image</strong></p>
  <div class="form-group has-icon">
  <div class="user-edit-image">
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "pull-left profile-img" %>
  </div>
  <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user_image user-edit-form" %>
　</div>

  <p><strong>Introduction</strong></p>
  <%= f.text_area :introduction, class: "introduction" %>
  <%= f.submit "Update User" %>
<% end %>

</div>
</div>

<div class="col-md-6">
 <p class="right">CopyRight Infratop.inc</p>
</div>


</div>
</div>