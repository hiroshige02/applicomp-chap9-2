<div class="container">
  <div class="row">

    <p class="notice"><%= notice %></p>

    <%= render "users/link", user: @user, book: @book %>

    <div class="col-md-9">
      <h2>Books</h2>
      <table class="table table-hover">
        <tbody>
          <thread>
            <tr>
              <th class="col-md-2"></th>
              <th class="col-md-3">Title</th>
              <th class="col-md-4">Opinion</th>
            </tr>
          </thread>
          <% @user.books.each do |book| %>
            <tr>
              <td> <%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg",size: "40x40" %> </td>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td> <%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <p class="right">CopyRight Infratop.inc</p>
  </div>
</div>

